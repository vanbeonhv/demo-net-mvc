@model DataAccess.DataObject.User
@Layout = "~/Views/Shared/_Layout.cshtml";

<div class="jumbotron main edit-center">
    <div style="width: 30%">
        <p>Email: @Model.Email</p>
        <div class="form-group">
            <label for="AddressInput">Address</label>
            <input class="form-control" id="AddressInput" placeholder="Enter Address" value=@Model.Address>
        </div>
        <div class="form-group">
            <label for="AgeInput">Age</label>
            <input class="form-control" id="AgeInput" placeholder="Enter Age" value=@Model.Age>
        </div>
        <button class="btn btn-primary">Submit</button>
    </div>
</div>

<script >
    $(".btn").click(function () {
        var address = $("#AddressInput").val();
        var age = $("#AgeInput").val();
        $.ajax({
            url: "/Member/EditResult",
            // type: "POST",
            data: {
                id: "@Model.Id",
                email: "@Model.Email",
                address: address,
                age: age,
            },
            success: function (data) {
                alert(data);
            },
            error: function (data) {
                alert("Error");
            }
        });
    });
</script>