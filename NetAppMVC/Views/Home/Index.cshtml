@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron main">
    <div class="container px-4 py-5 ">
        <div class="card card0 ">
            <div class="d-flex flex-lg-row flex-column-reverse flex-item">
                <div class="card card1">
                    <div class=" justify-content-center my-auto">
                        <div class="col-10 my-5">
                            <h3 class="msg-info">Please login to your account</h3>

                            <div class="form-group">
                                <label class="form-control-label text-muted">Username</label>
                                <input type="text" id="email" name="email" class="form-control">
                            </div>

                            <div class="form-group">
                                <label class="form-control-label text-muted">Password</label>
                                <input type="password" id="psw" name="psw" class="form-control">
                            </div>

                            <div class=" justify-content-center my-3 px-3">
                                <button class="btn-block btn-color btn-login">Login</button>
                            </div>
                        </div>
                    </div>
                    <div class="bottom text-center mb-5">
                        <p class="sm-text mx-auto mb-3">
                            Don't have an account?
                            <button class="btn btn-white ml-2">
                                @Html.ActionLink("Create new", "SignInView", "Home")
                            </button>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        console.log("test");
        $(".btn-login").click(() => {
            const email = $("#email").val();
            const password = $("#psw").val();
            const signInData = {
                email,
                password
            }
            $.ajax({
                type: "POST",
                contentType: "application/json",
                url: "/Home/Login",
                data: JSON.stringify(signInData),
                dataType: "json",
                success: ((result) => {
                    alert(result.Message)
                    if (result.Status === 200) {
                        window.location.href = "/Home/Welcome"
                    }
                        
                })
            })
        })
    })
</script>